<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ibb.login_register.ForgetPasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/forget_back_iv"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_beacklight" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找回密码"
                android:textSize="18sp"
                android:textColor="#323232" />

</RelativeLayout>

        <ImageView
            android:layout_marginTop="30dp"
            android:src="@mipmap/logo_ibb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/forget_phone_et"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:numeric="integer"
            android:maxLength="11"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHui"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7.5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorHui"
            android:layout_marginRight="7.5dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/forgrt_code_et"
                android:numeric="integer"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="请输入验证码"
                android:maxLength="4"
                android:background="@null"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorHui"
                android:layout_height="wrap_content" />
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:layout_marginRight="11dp"
                android:background="@color/colorHui"/>
            <Button
                android:background="@null"
                android:id="@+id/forget_huoqucode_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="获取验证码"
                android:textColor="#1eb0ca" />
        </LinearLayout>
        <View
            android:layout_marginLeft="7.5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorHui"
            android:layout_marginRight="7.5dp"/>

        <Button
            android:id="@+id/forget_next_rb"
            android:button="@null"
            android:layout_marginTop="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/button_xiayibu"/>

    </LinearLayout>

</LinearLayout>
