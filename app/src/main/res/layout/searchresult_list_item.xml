<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:src="@mipmap/minebackground"
                    android:id="@+id/searchresult_image"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="30px"
                    android:layout_marginStart="30px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/searchresult_image"
                    android:layout_toEndOf="@+id/searchresult_image"
                    android:layout_marginLeft="20px"
                    android:layout_marginStart="20px">

                    <TextView
                        android:id="@+id/searchresult_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apple iPhone X (A865) 64GB银色 黑色"
                        android:textSize="32px"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_marginRight="30px"
                        />
                    <LinearLayout
                        android:layout_marginTop="20px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30px"
                                android:layout_height="30px"
                                android:src="@mipmap/icon_fullscore"
                                />
                            <ImageView
                                android:layout_marginLeft="10px"
                                android:layout_width="30px"
                                android:layout_height="30px"
                                android:src="@mipmap/icon_fullscore"
                                />
                            <ImageView
                                android:layout_marginLeft="10px"
                                android:layout_width="30px"
                                android:layout_height="30px"
                                android:src="@mipmap/icon_fullscore"
                                />
                            <ImageView
                                android:layout_marginLeft="10px"
                                android:layout_width="30px"
                                android:layout_height="30px"
                                android:src="@mipmap/icon_fullscore"
                                />
                            <ImageView
                                android:layout_marginLeft="10px"
                                android:layout_width="30px"
                                android:layout_height="30px"
                                android:src="@mipmap/icon_null"
                                />

                            <TextView
                                android:id="@+id/searchresult_score"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8.2分"
                                android:textSize="13sp"
                                android:textColor="@color/colorFindtime"
                                android:layout_marginLeft="30px"
                                />
                        </LinearLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <CheckBox
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:focusable="false"
        android:id="@+id/searchresult_cb"
        android:button="@null"
        android:background="@drawable/geeks_check"
        android:layout_width="40px"
        android:layout_height="42px" />
</RelativeLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="20px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥ 8000-10360"
                        android:textSize="15sp"
                        android:textColor="@color/colorFindtime"
                        />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>