<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="bottom">

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addpopup_shape"
        android:orientation="vertical">

      <TextView
          android:padding="15dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="分享到"
          android:textColor="#282828" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_qq"/>
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_qqkongjian"/>
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_weixin"/>
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_pengyquan"/>
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_weibo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_fuzhilianjie"/>
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_buganingqu"/>
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorGray"/>
        <Button
            android:background="#00000000"
            android:textSize="16sp"
            android:id="@+id/share_return_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            />
    </LinearLayout>
</LinearLayout>