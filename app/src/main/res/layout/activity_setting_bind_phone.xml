<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ibb.ui.ui.mine.SettingBindPhoneActivity">

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_margin="30px"
            android:id="@+id/bindphone_back_iv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_beacklight"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机号"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="60px"
        android:background="@drawable/add_shape"
        android:layout_width="match_parent"
        android:layout_height="90px">
        <TextView
            android:layout_marginLeft="30px"
            android:id="@+id/phone_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="32px"
            android:textColor="#282828"/>
        <EditText
            android:layout_marginLeft="76px"
            android:layout_toRightOf="@+id/phone_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textColor="#999999"
            android:textSize="26px"
            android:background="@null"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:background="@drawable/add_shape"
        android:layout_width="match_parent"
        android:layout_height="90px">
        <TextView
            android:layout_marginLeft="30px"
            android:id="@+id/yzm_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="32px"
            android:textColor="#282828"/>

        <EditText
            android:layout_marginLeft="76px"
            android:layout_toRightOf="@+id/yzm_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:textColor="#999999"
            android:textSize="26px"
            android:background="@null"/>

        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="40px"
           android:text="获取验证码"
            android:textColor="#1EB0C2"
            android:background="@drawable/addtwo_button_shape"/>
    </RelativeLayout>

    <Button
        android:layout_marginTop="100px"
        android:layout_gravity="center_horizontal"
        android:layout_width="690px"
        android:layout_height="88px"
        android:background="@drawable/settingbutton_shape"
        android:text="绑定"
        android:textColor="@color/colorWhite"
        />
</LinearLayout>
