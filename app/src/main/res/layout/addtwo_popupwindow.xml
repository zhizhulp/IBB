<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center">

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addtwopopup_shape"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加你感兴趣的方面："
        android:textColor="#282828"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/addtwo_finish_iv"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="12.5dp"
        android:layout_height="12.5dp"
        android:src="@mipmap/icon_dele"/>
</RelativeLayout>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/label_niutougeng"/>
<EditText
    android:paddingLeft="15dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/add_shape_et"
    android:layout_width="243dp"
    android:layout_height="33dp" />

        <Button
            android:layout_margin="25dp"
            android:background="@drawable/addtwo_button_shape"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="完成"
            android:textColor="#1EB0C2"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>