<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.example.ibb.ui.ui.mine.SettingAboutActivity">

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:padding="15dp"
            android:id="@+id/about_back_iv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_beacklight"/>
        <TextView
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于爱哔哔"
            android:textColor="#323232"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>

    <com.example.ibb.custom_view.CircleImageView
        android:layout_marginTop="100px"
        android:layout_gravity="center"
        android:layout_width="210px"
        android:layout_height="210px"
        android:src="@mipmap/b3"/>
    <TextView
        android:layout_marginTop="30px"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="V1.0.0"/>
    <TextView
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="70px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="           “爱哔哔”是一个商品回答交流社区、属于北京爱哔哔科技有限公司。当用户去遇到任何商品领域的问题的时候、都可以向富有经验的人请教、获得商品的信息。"
        android:textColor="#333333"
        android:textSize="16sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="share"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="分享爱哔哔给朋友吧"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:background="#1EB0C2"/>
    </RelativeLayout>

</LinearLayout>
