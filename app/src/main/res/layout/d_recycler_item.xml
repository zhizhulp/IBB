<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/d_tv"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TA提问了"
                android:textColor="#999999"
                android:textSize="14sp"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01-02"
                android:layout_marginLeft="5dp"
                android:textColor="#666666"
                android:textSize="13sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/my_imgb"
                android:layout_toStartOf="@+id/my_imgb">

                <TextView
                    android:id="@+id/d_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你有哪些不舍得下手的化妆品还在纠结烦恼？"
                    android:textStyle="bold"
                    android:textColor="#282828"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="531赞"
                        android:textColor="#666666"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:textColor="#666666"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="531赞"
                        android:textColor="#666666"
                        android:textSize="10sp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:background="@drawable/button_shape"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_toLeftOf="@+id/biaoqian"
                            android:text="美妆"
                            android:textSize="10sp"
                            android:textColor="@color/colorWhite"
                            android:layout_marginRight="10dp"
                            />
                        <Button
                            android:id="@+id/biaoqian"
                            android:background="@drawable/button_shape"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="口红"
                            android:textSize="10sp"
                            android:textColor="@color/colorWhite"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/my_imgb"
                android:layout_width="120dp"
                android:layout_height="98dp"
                android:src="@mipmap/label_kouhongtu"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGray"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
</LinearLayout>