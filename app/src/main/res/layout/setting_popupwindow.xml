<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center">

    <LinearLayout
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@drawable/addtwopopup_shape"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/setting_delete_iv"
                android:layout_centerVertical="true"
                android:layout_margin="30px"
                android:layout_alignParentRight="true"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/icon_dele"/>

        <TextView
            android:layout_marginTop="40px"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已有新版本：爱哔哔1.0.1"
            android:textColor="#323232"
            android:textSize="36px"/>

        <RelativeLayout
            android:layout_marginBottom="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/addtwo_button_shape"
                android:layout_width="160px"
                android:layout_height="50px"
                android:text="立即更新"
                android:textSize="26px"
                android:textColor="#1EB0C2" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>