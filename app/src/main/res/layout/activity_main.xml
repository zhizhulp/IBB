<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ibb.MainActivity">
    <RelativeLayout
        android:paddingBottom="5dp"
        android:id="@+id/btm_lat"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/im_add"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_bulefabu"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:gravity="center"
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/answered_radiobt"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableBottom="@drawable/radio_check"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/find_radiobt"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/find_radio_check" />

            <RadioButton
                android:visibility="invisible"
                android:id="@+id/add_radiobt"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@mipmap/icon_bulefabu" />

            <RadioButton
                android:id="@+id/message_radiobt"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/message_radio_check" />

            <RadioButton
                android:id="@+id/mine_radiobt"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/mine_radio_check" />
        </RadioGroup>
    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/btm_lat"
        android:background="@color/title_line" />

    <FrameLayout
        android:id="@+id/show_fm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line"/>
</RelativeLayout>
