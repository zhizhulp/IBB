<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ibb.splash.SelectGenderActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/selectgenter_jump_tv"
            android:layout_marginTop="50px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textColor="#999999"
            android:textSize="28px"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="200px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择性别"
        android:textStyle="bold"
        android:textColor="#323232"
        android:textSize="36px"/>

    <LinearLayout
        android:layout_marginTop="116px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/label_nvsheng"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女生"
                android:textStyle="bold"
                android:textColor="#323232"
                android:textSize="32px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="32px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/label_nansheng"/>
            <TextView
                android:layout_marginTop="50px"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男生"
                android:textStyle="bold"
                android:textColor="#323232"
                android:textSize="32px"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="200px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/selectgenter_bt"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="150px"
            android:layout_marginRight="150px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我选好了"
            android:textSize="32px"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/selectbutton_shape"/>
    </RelativeLayout>

</LinearLayout>
