<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:src="@mipmap/icon_wendawen" />

            <TextView
                android:id="@+id/text_Recommend_Title_Four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lineSpacingExtra="4px"
                android:maxLength="36"
                android:maxLines="2"
                android:text="你有哪些想买却舍不得下单的化妆品口红不脱色比较好用？"
                android:textColor="#282828"
                android:textSize="32px"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/icon_wendada" />

                <TextView

                    android:id="@+id/text_Recommend_Content_Four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="20dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="3"
                    android:text="222222222222222222222222222222222222222222222222222"
                    android:textColor="#999999"
                    android:textSize="28px" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_Recommend_likeCount_Four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="15px"
                android:text="534赞"
                android:textColor="@color/colorFindtime"
                android:textSize="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15px"
                android:layout_toLeftOf="@+id/ping_tv"
                android:layout_toStartOf="@+id/ping_tv"
                android:text="."
                android:textColor="@color/colorFindtime"
                android:textSize="20px" />

            <TextView
                android:id="@+id/text_Recommend_replyCount_Four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="234评"
                android:textColor="@color/colorFindtime"
                android:textSize="20px" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:background="@color/colorGray" />

    </LinearLayout>
</LinearLayout>