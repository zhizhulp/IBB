<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ibb.login_register.CodeActivity">

    <ImageView
        android:id="@+id/code_imageView"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_marginTop="62px"
            android:layout_marginLeft="15px"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/back"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="152px"
            android:src="@drawable/logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <EditText
                android:textColor="@color/colorWhite"
                android:maxLength="4"
                android:id="@+id/register_yzm_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40px"
                android:background="@null"
                android:hint="请输入验证码"
                android:numeric="integer"
                android:textColorHint="@color/colorHui" />

            <View
                android:layout_centerVertical="true"
                android:layout_width="1px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="210px"
                android:background="@color/colorHui" />


            <Button
                android:id="@+id/register_againyzm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:background="@null"
                android:text="获取验证码"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorHui" />


        <TextView
            android:id="@+id/password_rules_tv"
            android:layout_marginTop="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="密码长度为6~16位，包含字母或数字"

            android:textColor="@color/colorHui"/>

        <EditText
            android:textColor="@color/colorWhite"
            android:id="@+id/register_mima_et"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="10px"
            android:background="@null"
            android:hint="设置密码"
            android:password="true"
            android:textColorHint="@color/colorHui" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/colorHui" />

        <Button
            android:id="@+id/register_queren_button"
            android:layout_width="match_parent"
            android:layout_height="84px"
            android:layout_gravity="center"
            android:layout_marginBottom="85px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="40px"
            android:background="@mipmap/querenbox"
            android:text="确认"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</FrameLayout>
